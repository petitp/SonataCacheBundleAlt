<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="sonata.cache_alt.manager" class="Sonata\CacheBundleAlt\Cache\CacheManager" >
            <argument />
            <argument />
        </service>


        <service id="sonata.cache_alt.recorder" class="Sonata\CacheBundleAlt\Invalidation\Recorder" >
            <argument type="service" id="sonata.cache_alt.model_identifier"/>
        </service>

        <service id="sonata.cache_alt.model_identifier" class="Sonata\CacheBundleAlt\Invalidation\ModelCollectionIdentifiers" >
            <argument type="collection" />
        </service>

        <service id="sonata.cache_alt.noop" class="Sonata\CacheBundleAlt\Adapter\NoopCache">
            <tag name="sonata.cache" />
        </service>

        <service id="sonata.cache_alt.mongo" class="Sonata\CacheBundleAlt\Adapter\MongoCache" >
            <tag name="sonata.cache" />
            <argument type="collection" />
            <argument />
            <argument />
        </service>

        <service id="sonata.cache_alt.memcached" class="Sonata\CacheBundleAlt\Adapter\MemcachedCache" >
            <tag name="sonata.cache" />
            <argument />
            <argument type="collection" />
        </service>

        <service id="sonata.cache_alt.memcache" class="Sonata\CacheBundleAlt\Adapter\MemcacheCache" >
            <tag name="sonata.cache" />
            <argument />
            <argument type="collection" />
        </service>

        <!-- TODO AHU this must be more universal -->
        <service id="sonata.cache_alt.fallback_memcache" class="Sonata\CacheBundleAlt\Adapter\MemcacheCache" >
            <tag name="sonata.cache" />
            <argument />
            <argument type="collection" />
        </service>

        <!-- TODO AHU this must be more universal -->
        <service id="sonata.cache_alt.fallback_memcached" class="Sonata\CacheBundleAlt\Adapter\MemcachedCache" >
            <tag name="sonata.cache" />
            <argument />
            <argument type="collection" />
        </service>

        <!-- AHU added -->
        <service id="sonata.cache_alt.redis" class="Sonata\CacheBundleAlt\Adapter\RedisCache" >
            <tag name="sonata.cache" />
            <argument />
            <argument type="collection" />
        </service>

        <service id="sonata.cache_alt.file" class="Sonata\CacheBundleAlt\Adapter\FileCache" >
            <tag name="sonata.cache" />
            <argument />
            <argument type="collection" />
        </service>

        <service id="sonata.cache_alt.apc" class="Sonata\CacheBundleAlt\Adapter\ApcCache" >
            <tag name="sonata.cache" />
            <argument type="service" id="router" />
            <argument />
            <argument />
            <argument type="collection" />
        </service>

        <service id="sonata.cache_alt.esi" class="Sonata\CacheBundleAlt\Adapter\EsiCache">
            <tag name="sonata.cache" />
            <argument />
            <argument type="collection" />
            <argument type="service" id="router" />
            <argument type="service" id="controller_resolver" />
        </service>

        <service id="sonata.cache_alt.invalidation.simple" class="Sonata\CacheBundleAlt\Invalidation\SimpleCacheInvalidation">
            <argument type="service" id="logger" />
        </service>
    </services>
</container>